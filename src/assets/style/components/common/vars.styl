$black = #333333
$white = #ffffff
$gray = darken($white, 50%)
$container = 750px

// button shadow
$shadowNum = 3px

// Font
$f-serif = 'Merriweather', serif
$f-sans = 'Montserrat', sans-serif
$f-size = 18px
$l-height = 150%

// weight:
$f-heavy = 800
$f-medium = 600
$f-regular = 400
$f-light = 300

set(width)
	margin: 0 auto
	if width is full
		width: 100%
	else
		max-width: $container
		width: 100%

testborder()
	border: 1px solid black

h1, h2, h3, h4, h5, h6
	font-family $f-sans

p
	font-family: $f-serif
	font-size: $f-size
	line-height: $l-height

// styling links
$a
	color: $black
	cursor: pointer
	text-decoration-line: underline
	font-style: italic
	&:hover
		color: lighten($black, 50%)
	&.button
		text-decoration-line: none
		font-style: normal
		width: 100%
		display: block
$a-bg
	color: $white
	cursor: pointer
	text-decoration: none
	&:hover
		color: darken($white, 30%)

// button hover
$btn-hover
	box-shadow: - $shadowNum $shadowNum 0px -0px $white;

// color background
$bg
	color: $white
	background-color: $darker
	h2, h3, h4, h5, p
		color: $white
	h2
		border-color: $white
	button
		&:hover
			$btn-hover

// dropshadow

dropshadow(type)
	if type is light
		box-shadow: -10px 10px 20px -5px rgba(0, 0, 0, 50%)
	else if type is hard
		box-shadow: -10px 10px 20px -5px #000
	else if type is up
		box-shadow: 0px 0px 25px 5px rgba(0, 0, 0, 50%)
	else
		box-shadow: none
