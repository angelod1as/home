#header
	set(full)
	padding-top: 0
	background-color: $color
	.header-logo
		position: absolute
		top: 20px
		left: 20px
		width: 100px
		z-index 2
		+below(500px)
			width 60px
	.header-bg
		max-width: 100vw
		height: 100vh
		position: relative
		transition: .4s
		.fade-box
			.react-reveal
				z-index: 2
				position: absolute
				bottom: 20px
				right: 20px
		.header-box
			max-width: 500px
			padding: 20px
			background-color: rgba($black, .6)
			border-radius: 5px
			.header-title
				h1
					text-transform: uppercase
					font-weight: $f-heavy
					font-size: 2.5em
					margin-bottom: 20px
					color: $white
				h2
					text-transform: none
					font-weight: $f-medium
					margin-bottom: 20px
					color: $white
				p
					margin-bottom: 20px
					color: $white
			button
				display: block
				width: 100%
				margin: 30px 0 0 0
		.header-overlay
			position: absolute
			top: 0
			left: 0
			width: 100%
			height: 100%
			background-color: #000
			z-index: 1
			transition: .5s
		.header-bg-image
			width: 100%
			height: 100%
			position: relative
			text-align: center
			background-size: cover
			z-index: 0
			opacity: 1
			transition: .5s
			background-color: $color

	.small
		height: 150px
		background-color: $color
		.header-bg-image
		.header-overlay
		.header-box
			opacity: 0 !important

#header
	.header-bg
		.header-box
			.header-title
				+below(600px)
					h1
						font-size: 1.3em
						margin-bottom: 10px
					h2
						font-size: 1.1em
						margin-bottom: 10px
					button
						margin-top: 5px
					p
						margin-bottom: 10px
						font-size: .9em

