#info
	set(center)
	.info-inner
		display: grid
		grid-template-columns: repeat(auto-fit, minmax(220px, 220px))
		grid-column-gap: 20px
		grid-row-gap: 50px
		justify-content: center
		p
			text-align: center
			margin: 0
			padding: 0
		.vinheta
			text-align: center
			.info-img
				width: 100%
			.info-num
			.info-txt
			.info-extra
				font-style: italic
				line-height: 1.2em
			.info-num
				margin-top: -30px
				font-weight: bold
				font-size: 3em
			.info-txt
				font-size: 1.3em
			.info-extra
				font-size: .8em
				margin-top: 5px

